doctype html
/[if lt IE 7]
  |<html class='no-js lt-ie9 lt-ie8 lt-ie7'>
/[if IE 7]
  |<html class='no-js lt-ie9 lt-ie8'>
/[if IE 8]
  |<html class='no-js lt-ie9'>
/![if gt IE 8]><!
html.no-js
  /!<![endif]

  = render 'head'

  body class=controller.controller_name
    div#wrap
      = render 'chromeframe'
      = render 'header'
      
      div#main.clearfix
        div#particles.content data-stellar-background-ratio="0.65"
          div#blur.content data-stellar-background-ratio="0.8" 
            div.content-area
              div.content-inner
                = render 'flashes'
                = yield
      /div.clearfooter
        
    /= render 'footer'

    / Javascript at the bottom for fast page loading
    = render 'javascripts'
